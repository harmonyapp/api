{
  "name": "harmony",
  "version": "0.1.0",
  "description": "Harmony is an open-source chat application",
  "scripts": {
    "compile": "rm -rf dist && tsc --rootDir .",
    "start": "npm run compile && node ./dist/src",
    "mocha:unit": "ts-mocha --jobs 1 test/unit/**/*.test.ts",
    "mocha:int": "ts-mocha --require ./test/fixtures/hooks.ts --jobs 1 test/int/**/*.test.ts",
    "mocha": "npm run mocha:unit && npm run mocha:int",
    "test": "npm run lint && npm run mocha",
    "lint": "eslint src test --max-warnings=0",
    "lint:fix": "eslint --fix src test"
  },
  "author": "chris9740",
  "license": "apache-2.0",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "biguint-format": "^1.0.2",
    "convict": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.3",
    "express-validator": "^6.11.1",
    "flake-idgen": "^1.4.0",
    "mongoose": "^5.10.15",
    "rate-limit-redis": "^2.0.0",
    "redis": "^3.1.2",
    "redis-mock": "^0.56.3",
    "socket.io": "^3.0.4",
    "socket.io-redis": "^6.0.1",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.15",
    "@types/convict": "^5.2.1",
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^5.1.1",
    "@types/flake-idgen": "^0.1.30",
    "@types/mocha": "^8.2.1",
    "@types/mongoose": "^5.10.4",
    "@types/rate-limit-redis": "^1.7.1",
    "@types/redis": "^2.8.28",
    "@types/redis-mock": "^0.17.0",
    "@types/socket.io": "^2.1.13",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "chai": "^4.3.0",
    "eslint": "^7.15.0",
    "mocha": "^8.3.0",
    "mongodb-memory-server": "^6.9.2",
    "supertest": "^6.0.1",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.0.5"
  }
}
